{% layout 'layout.liquid'%}

{% block content %}
<div id="search-display">
    <h2 class="display-6">Find Recipies</h2>
    <form action="/recipies" method="POST">
        <input type="text" name="food" placeholder="Enter your search">
        <input type="submit">
    </form>
</br>
<div id="show-container">
     <ul>
        {% for results in recipeData.results %}
        <li><a href="/{{forloop.index0}}">{{ results.title }}</a></li>
        <li><a href="/{{forloop.index0}}"><img src="{{ results.image }}" width="150px"></a></li>
        {% endfor %}
    </ul> 
</div>

   
   
   



    
{% endblock %}